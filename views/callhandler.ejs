<!doctype html>
<html>
  <head></head>
  <body>
    <script>
     if (navigator.mozSetMessageHandler) {
       navigator.mozSetMessageHandler('activity', function(activityRequest) {
         var option = activityRequest.source;

         if (option.data && option.data.url) {
           location.assign(option.data.url);
         }
       });
     } else {
       location.assign("/app");
     }
    </script>
  </body>
</html>
